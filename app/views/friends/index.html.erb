<h1>Friends</h1>
<p>

  <% @friends.each do |f| %>
  <ul>

    <% #unless @users.friendship.self_id == @user.inverse_friendship.friend_id %>

    <% if f.friend_id == current_user.id %>
    <li><%= @users.find(f.self_id).name %></li>
    <br>
    <li>Avatar:
      <br>
      <%= image_tag(@users.find(f.self_id).avatar.page.url, alt: 'No Image') %></li>
      <br>

      <li>Job: <%= @users.find(f.self_id).job %></li>
      <br>
      <li>Location: <%= @users.find(f.self_id).location %></li>

      <% else %>

      <li><%= @users.find(f.friend_id).name %></li>
      <br>

      <li>Avatar:
        <br>
        <%= image_tag(@users.find(f.friend_id).avatar.page, alt: 'No Image') %></li>
        <br>

        <li>Job: <%= @users.find(f.friend_id).job %></li>
        <br>
        <li>Location: <%= @users.find(f.friend_id).location %></li>
        <% end %>
        
      </ul>

      <br>
      <hr>
      <% #end %>
      <% end %>
    </p>